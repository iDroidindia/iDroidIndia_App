<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shimmer="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:gravity="center"
    tools:context="com.example.santosh.idroidindia.Main_front_screen"
    android:background="#31113987">

<LinearLayout
    android:layout_width="match_parent"
    android:id="@+id/header"

    android:background="@android:color/background_light"
    android:orientation="vertical"

    android:layout_height="170dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:id="@+id/logo"
        android:layout_gravity="center"
        android:paddingTop="10dp"


        />

    <TextView
        android:layout_width="match_parent"
        android:textColor="@android:color/holo_red_dark"
        android:text="iDroidIndia"
        android:textSize="45dp"
        android:layout_height="50dp"
        android:textStyle="italic"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/textView" />


</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lay1"
        android:weightSum="7"
        android:orientation="vertical"
        android:layout_height="wrap_content"
android:layout_below="@+id/header"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:animateLayoutChanges="true"
                android:layout_width="170dp"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"

                android:background="@android:color/background_light"
                android:id="@+id/linear1">
            <ImageView
                android:layout_width="60dp"


                android:layout_gravity="center"

                android:id="@+id/im1"
                android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="170dp"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_height="match_parent"

                android:background="@android:color/background_light"
                android:id="@+id/linear2">

                <ImageView
                    android:layout_width="60dp"
                    android:id="@+id/im2"

                    android:layout_height="match_parent" />
            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="30dp">

            <TextView
                android:layout_width="170dp"
                android:textColor="@android:color/black"
                android:text="TRAINING PROGRAMS"
               android:gravity="center"
                android:id="@+id/one"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:layout_weight="2"
                android:layout_marginRight="5dp" />
            <TextView
                android:layout_width="170dp"
                android:textColor="@android:color/black"
                android:text="TRAINING SCHEDULE"
                android:gravity="center"
                android:id="@+id/two"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@android:color/background_light" />
            </LinearLayout>






        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lay2"
        android:layout_below="@+id/lay1"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:weightSum="7"
        android:layout_marginBottom="5dp">



        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="170dp"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"

                android:background="@android:color/background_light"
                android:id="@+id/linear3">

                <ImageView
                    android:layout_width="60dp"
                    android:id="@+id/im3"

                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="170dp"
                android:gravity="center"
                android:layout_weight="2"

                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:id="@+id/linear4">
                <ImageView
                    android:layout_width="60dp"

                    android:id="@+id/im4"

                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="30dp">

            <TextView
                android:layout_width="170dp"
                android:textColor="@android:color/black"
                android:text="ENQUIRY FORM"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:id="@+id/three"
                android:layout_marginRight="5dp"
                android:background="@android:color/background_light" />
            <TextView
                android:layout_width="170dp"
                android:textColor="@android:color/black"
                android:text="LOCATION"
                android:gravity="center"
                android:id="@+id/four"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@android:color/background_light" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:orientation="vertical"
        android:layout_below="@id/lay2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:weightSum="7"
        >

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="170dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"

                android:background="@android:color/background_light"
                android:gravity="center"
                android:id="@+id/linear5">

                <ImageView
                    android:layout_width="50dp"

                    android:id="@+id/im5"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="170dp"
                android:layout_weight="2"

                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:gravity="center"
                android:id="@+id/linear6">
                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/im6"


                    android:layout_height="match_parent" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="30dp">

            <TextView
                android:layout_width="170dp"
                android:textColor="@android:color/black"
                android:text="FIND US IN FACEBOOK"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="2"

                android:id="@+id/five"
                android:layout_marginRight="5dp"
                android:background="@android:color/background_light" />
            <TextView
                android:layout_width="170dp"
                android:textColor="@android:color/black"
                android:text="CONTACT US"
                android:gravity="center"
                android:id="@+id/six"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@android:color/background_light" />
        </LinearLayout>


    </LinearLayout>
<!--
    <View

        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/lay1" />
    <View

        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/lay2" />
    <View

        android:layout_width="match_parent"

        android:layout_height="1dp"
        android:background="#c0c0c0"
        android:layout_below="@+id/lay3" />

-->

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical|center_horizontal"

        android:layout_below="@+id/lay3"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="190dp"

                android:text="POWERED BY:"
                android:textSize="17dp"

                android:id="@+id/powerdby"
                android:textColor="@android:color/background_light"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textStyle="bold" />


        <ImageView
            android:layout_width="30dp"

            android:id="@+id/android_logo"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
